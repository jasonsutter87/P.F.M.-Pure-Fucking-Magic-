{
  "manifest_version": 3,
  "name": "PFM â€” AI Conversation Capture",
  "version": "1.0.0",
  "description": "Capture AI conversations (ChatGPT, Claude, Gemini) as .pfm files. View and convert .pfm files in-browser.",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background/service-worker.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://chat.openai.com/*",
        "https://chatgpt.com/*"
      ],
      "js": ["shared/pfm-core.js", "content/scraper-chatgpt.js", "content/content-main.js"],
      "run_at": "document_idle"
    },
    {
      "matches": [
        "https://claude.ai/*"
      ],
      "js": ["shared/pfm-core.js", "content/scraper-claude.js", "content/content-main.js"],
      "run_at": "document_idle"
    },
    {
      "matches": [
        "https://gemini.google.com/*"
      ],
      "js": ["shared/pfm-core.js", "content/scraper-gemini.js", "content/content-main.js"],
      "run_at": "document_idle"
    }
  ],
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'none';"
  }
}
